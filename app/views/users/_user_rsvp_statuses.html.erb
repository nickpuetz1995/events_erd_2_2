<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Rsvp Statuses

    <a data-toggle="collapse" href="#user_rsvp_statuses_new_form">
      Add rsvp status
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.rsvp_statuses.each do |rsvp_status| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to rsvp_status, rsvp_status %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_rsvp_statuses_new_form">
        <%= render partial: "users/user_rsvp_statuses_new_form" %>
      </div>
    </div>

  </ul>
</div>
