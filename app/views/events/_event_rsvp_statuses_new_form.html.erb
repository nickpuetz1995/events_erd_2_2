<!-- Form rsvp_status start -->
<%= form_with(model: @rsvp_status, local: true) do |f| %>
<!-- Form rsvp_status end -->

  <!-- Label and input for event_id start -->
  <!-- Input for event_id start -->
  <%= f.hidden_field :event_id, value: @event.id %>
  <!-- Input for event_id end -->
  <!-- Label and input for event_id end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <%= f.label :user_id %>

    <!-- Input for user_id start -->
    <%= f.collection_select :user_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for rsvp_status start -->
  <div class="form-group">
    <%= f.label :rsvp_status %>

    <!-- Input for rsvp_status start -->
    <%= f.text_field :rsvp_status, class: "form-control" %>
    <!-- Input for rsvp_status end -->
  </div>
  <!-- Label and input for rsvp_status end -->

  <%= f.submit "Create rsvp status", class: "btn btn-block btn-outline-secondary" %>
<% end %>
