        <% host_class << " is-invalid" %>
      <% else %>
        <% host_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :host_id %>
    <%= f.collection_select :host_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <% if host_was_invalid %>
      <% event.errors.full_messages_for(:host).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
