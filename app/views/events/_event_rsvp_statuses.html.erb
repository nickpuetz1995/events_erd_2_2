<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Rsvp Statuses

    <a data-toggle="collapse" href="#event_rsvp_statuses_new_form">
      Add rsvp status
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @event.rsvp_statuses.each do |rsvp_status| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to rsvp_status, rsvp_status %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to rsvp_status, method: :delete, data: { confirm: "Do you really want to delete this rsvp_status" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="event_rsvp_statuses_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "events/event_rsvp_statuses_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
