<div class="card mb-3">
  <h2 class="card-header h4">
    Rsvp Status #<%= rsvp_status.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Event</dt>
      <dd>
        <% if @rsvp_status.event.present? %>
          <%= link_to rsvp_status.event, rsvp_status.event %>
        <% end %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @rsvp_status.user.present? %>
          <%= link_to rsvp_status.user, rsvp_status.user %>
        <% end %>
      </dd>

      <dt>Rsvp status</dt>
      <dd><%= rsvp_status.rsvp_status %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back rsvp_status, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_rsvp_status_url(rsvp_status), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to rsvp_status, method: :delete, data: { confirm: "Do you really want to delete this rsvp_status?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(rsvp_status.updated_at) %> ago
  </div>
</div>
